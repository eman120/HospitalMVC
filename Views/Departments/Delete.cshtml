@model Department

<h1>Delete</h1>
<hr />

<h3>Are you sure you want to delete this?</h3>

<dl class="row">
    <dt class="col-1">@Html.DisplayNameFor(d => d.Name)</dt>
    <dd class="col-11">@Model.Name</dd>

    <dt class="col-1">@Html.DisplayNameFor(d => d.Description)</dt>
    <dd class="col-11">@Model.Description</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
<br />
<a asp-controller="Departments" asp-action="Index" class="btn btn-dark">Back to list</a>