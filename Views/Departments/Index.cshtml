@model IEnumerable<Department>

<h1>Index</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(d => d.Name)</th>
            <th>@Html.DisplayNameFor(d => d.Description)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <div class="btn btn-group">
                        <a asp-controller="Departments" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">
                            <i class="far fa-list-alt"></i>
                        </a>

                        <a asp-controller="Departments" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                            <i class="far fa-edit"></i>
                        </a>

                        <a asp-controller="Departments" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>

<a asp-action="Create" class="btn btn-outline-primary">Create</a>
