@model IEnumerable<Patient>
<h1>Patients</h1>

<form method="get" asp-action="Index" asp-controller="Patients" class="search">
    <div class="input-group">
        <input type="text" name="searchText" value="@ViewBag.CurrentSearch"class="searchinp"/>
        <div class="input-group-append">
            <button type="submit" class="btn btn-secondary">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</form>

<form method="get" asp-controller="Patients" asp-action="Index">
    <label>Page Size</label>
    <input type="number" name="PageSize" value="@ViewBag.CurrentPageSize" />

    <label>Page Number</label>
    <input type="number" name="PageNumber" value="@ViewBag.CurrentPageNumber" />

    <button type="submit">Go</button>
</form>

<form method="get" asp-controller="Patients" asp-action="Index" class="order">
    <input type="radio" name="orderType" value="asc" checked="@ViewBag.AscendingOrder" />
    <label>Ascending</label>
    <input type="radio" name="orderType" value="desc" checked="@ViewBag.DescendingOrder" />
    <label>Descending</label>

    <input type="submit" value="Order" class="btn btn-secondary" />
</form>
<br />
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Full Name</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Age</td>
                <td>
                    <div class="btn btn-group">
                        <a asp-controller="Patients" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">
                            <i class="far fa-list-alt"></i>
                        </a>

                        <a asp-controller="Patients" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                            <i class="far fa-edit"></i>
                        </a>

                        <a asp-controller="Patients" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-outline-primary">Create</a>
<br />

